<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glitter Tech</li>
            <li>Glitter Tech (No Surgery)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>*/ThingDef[@Name="BaseGun_GT"]/statBases/SellPriceFactor</xpath>
                    <value>
                        <SellPriceFactor>0.7</SellPriceFactor>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>*/ThingDef[@Name="BaseGun_GT"]/comps</xpath>
                    <value>
                        <li>
                            <compClass>ProfitableWeapons.CompLootedWeapon</compClass>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>